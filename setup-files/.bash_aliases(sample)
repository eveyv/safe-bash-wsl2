# some more ls aliases
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
#Add write permissions to restricted file
alias lemmechange="sudo chmod a+w"

# Add an "alert" alias for long running commands.  Use like so:
#   sleep 10; alert
alias alert='notify-send --urgency=low -i "$([ $? = 0 ] && echo terminal || echo error)" "$(history|tail -n1|sed -e '\''s/^\s*[0-9]\+\s*//;s/[;&|]\s*alert$//'\'')"'
#quick edit bash
alias bedit="code .bashrc"
alias myaliases="code .bash_aliases"
#backwards navigation
alias ..="cd .."
alias ...="cd ../.."

alias home="cd /home/wsl_ev"
#git commmands
alias gs="git status"
alias gal="git add ."
alias gc="git commit -m"
alias gcot="git checkout"
alias go="git push origin"
alias gclo="git clone"
alias g@="HEAD"
alias shit="git remote set-url origin git@github.com:eveyv/"

#ubunalias sai="sudo apt install"
alias sai="sudo apt-get install"
alias sau="sudo apt update"
alias sau="sudo apt-get update"
alias update="sudo apt update"
alias sar="sudo apt-get remove"

#system state
alias reboot="sudo /sbin/reboot"
alias shutdown="sudo /sbin/shutdown"
# Get GPU ram on desktop / laptop
alias gpumeminfo="grep -i --color memory /var/log/Xorg.0.log"

#postgresql
alias pgstart="sudo service postgresql start"
alias pgstop="sudo service postgresql stop"
alias pgconnect="sudo -u postgres psql"
# locate windows IP from ubuntu session
alias myip="ip addr show eth0 | grep 'inet\b' | awk '{print $2}' | cut -d/ -f1"
#migrations for postgresql in rails (missing syntax)
alias mrm="rails db:migrate rails db:rollback rails db:migrate"
